  height: 50rpx;
  margin-left: 40rpx;
}
.like .fenxiang{
 width: 50rpx;
  height: 50rpx;
 
}
.fenxiang image {
  width: 100%;
  height: 100%;
}
.zan image {
  width: 100%;
  height: 100%;
}
