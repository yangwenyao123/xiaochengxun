  padding-bottom: 20rpx;

}
.coverImg {
  width: 308rpx;
  height: 300rpx;
}
.coverImg image {
  width: 100%;
  height: 100%;
}
.like {
  width: 100%;
  display: flex;
  flex-direction: row-reverse;
  margin-top: 30rpx;
  margin-bottom: 50rpx;
}
.like .zan {
