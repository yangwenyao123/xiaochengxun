  width: 750rpx;
}
.banner {
  height: 386rpx;
}
.banner  image{
  width: 100%;
  height: 100%;
}
.title {
  padding:40rpx;
  font-size:38rpx;
  font-weight: 900;

  position: relative;
  box-shadow:0px 2px 10px #ccc;
  
}
.title .border {
  width:31rpx;
  height:8rpx;
  background-color:#f90;
  position:absolute;
  left:56rpx;
  bottom:1rpx;

}
.wrap-item {
  padding: 30rpx;
  border-bottom: 20rpx solid #ccc;
}
.header-title {
  height: 124rpx;
  
  display: flex;
  align-items: center;
}
.header-title .logo {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  border: 1px solid #f90;

}
.header-title .txt {
  margin: 0 20rpx;
  font-size: 32rpx;
  font-weight: 600;
}
.header-title .icon {
  width: 120rpx;
  height: 50rpx;
}
.header-title .icon image  {
   width: 100%;
  height: 100%;
}
