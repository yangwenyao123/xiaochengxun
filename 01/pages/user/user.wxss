  padding: 38rpx;
  display: flex;
  justify-content:space-between;
}
.order  .dai {
  width:57rpx;
  height:88rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  
}

.order .dai image{
  width: 100%;
  height:78rpx;
  margin-bottom: 10rpx;
}
.order .dai  .text {
  font-size: 20rpx;
}
