.list {
  padding: 20rpx 20rpx 100rpx 20rpx;
  background-color: #ccc;
}
.item-zhanghu {
  width: 100%;
  height: 150rpx;
  border-radius: 20rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;

}
.item-zhanghu .price {
  width: 200rpx;
  height: 100rpx;
 
  margin-right: 30rpx;
  
}
.item-zhanghu .integral {
  width: 200rpx;
  height: 100rpx;
   margin-left: 30rpx;
  
}
.item-zhanghu .title,.item-zhanghu .rmb {
  width: 100%;
  height: 50%;
  text-align: center;
}

.item-zhanghu .title {
  font-size: 24rpx;
  color: #7c7c7c
}
.item-zhanghu .rmb {
  font-size: 30rpx;
  color: #4f4f4f
}


.order-item {
 margin: 20rpx 0;
 background-color: #fff;
 border-radius: 20rpx;
}
.order-item .title {
 padding: 0 20rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-bottom: 1rpx solid #ccc;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
  font-size: 26rpx;
}
.order-item .left{
  color: #000;

}

